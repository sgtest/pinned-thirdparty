  </template>
  <template name="#set" value="#set ($$$PROPERTY$ = $EXPR$)" shortcut="SPACE" description="Velocity set" toReformat="false" toShortenFQNames="true">
    <variable name="PROPERTY" expression="" defaultValue="" alwaysStopAt="true" />
